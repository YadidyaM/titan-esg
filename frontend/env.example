# Titan ESG Platform Frontend Environment Variables
# Copy this file to .env.local and configure your values

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Application Configuration
NEXT_PUBLIC_APP_NAME=Titan ESG Platform
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-powered ESG management and compliance platform

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN_FEATURES=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Web3/Blockchain Configuration (Optional)
NEXT_PUBLIC_POLYGON_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_API_KEY
NEXT_PUBLIC_CHAIN_ID=80002
NEXT_PUBLIC_CARBON_CREDIT_CONTRACT_ADDRESS=0x851a15a57F6fE3E2390e386664C7d9fC505Ca207

# AI Configuration (Optional)
NEXT_PUBLIC_OPENAI_API_URL=https://api.openai.com/v1
NEXT_PUBLIC_AI_MODEL=gpt-4-turbo-preview

# AI Service Configuration
NEXT_PUBLIC_AI_API_KEY=AI_API_KEY

# Note: Replace AI_API_KEY with your actual API key from aimlapi.com
# This key will be used for AI-powered features like carbon footprint calculation,
# trading bot analysis, and ESG trend insights.

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true

# Build Configuration
NEXT_PUBLIC_BUILD_TIME=
NEXT_PUBLIC_GIT_COMMIT=
