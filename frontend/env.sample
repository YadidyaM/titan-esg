# ESG Dashboard - Environment Variables Sample
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API KEYS
# =============================================================================

# EPC (Energy Performance Certificate) API Key
# Get your key from: https://epc.opendatacommunities.org/
EPC_KEY=your_epc_api_key_here

# Property Data API Key
# Get your key from: https://api.propertydata.co.uk/
PROPERTY_DATA_API_KEY=your_property_data_api_key_here

# Land Property API Key (Optional)
# Get your key from: https://landregistry.data.gov.uk/
USE_LAND_PROPERTY_API_KEY=your_land_property_api_key_here

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DATABASE CONFIGURATION (if using local database)
# =============================================================================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/titanesg

# Database Name
DB_NAME=titanesg

# =============================================================================
# AUTHENTICATION (if implementing user auth)
# =============================================================================

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Session Secret
SESSION_SECRET=your_session_secret_here

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# OpenAI API Key (for AI analysis features)
OPENAI_API_KEY=your_openai_api_key_here

# Web3 Provider (for blockchain features)
WEB3_PROVIDER_URL=https://polygon-rpc.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
ENABLE_AI_ANALYSIS=true
ENABLE_BLOCKCHAIN=true
ENABLE_REAL_TIME_UPDATES=true

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limits
EPC_API_RATE_LIMIT=100
PROPERTY_API_RATE_LIMIT=50

# =============================================================================
# CACHING
# =============================================================================

# Cache TTL (in seconds)
CACHE_TTL=300

# Enable/disable caching
ENABLE_CACHING=true

# =============================================================================
# LOGGING
# =============================================================================

# Log Level
LOG_LEVEL=info

# Enable API request logging
LOG_API_REQUESTS=true

# =============================================================================
# SECURITY
# =============================================================================

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Enable HTTPS in development
ENABLE_HTTPS_DEV=false

# =============================================================================
# PERFORMANCE
# =============================================================================

# API Timeout (in milliseconds)
API_TIMEOUT=10000

# Retry attempts for failed API calls
API_RETRY_ATTEMPTS=3

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable debug mode
DEBUG=false

# Show API response details in console
SHOW_API_RESPONSES=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production
# 4. Monitor your API usage to stay within rate limits
# 5. Set NODE_ENV=production in production environments

# =============================================================================
# QUICK START
# =============================================================================

# 1. Copy this file to .env
# 2. Fill in your API keys
# 3. Run: npm run dev
# 4. Navigate to: http://localhost:3000

# =============================================================================
# TROUBLESHOOTING
# =============================================================================

# If you get API errors:
# - Verify your API keys are correct
# - Check if you've exceeded rate limits
# - Ensure the APIs are accessible from your network
# - Check the browser console for detailed error messages
